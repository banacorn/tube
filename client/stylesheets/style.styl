@import 'nib/reset'
@import 'font-awesome.css'

@font-face
  font-family: 'Tauri'
  font-style: normal
  font-weight: 400
  src: local('Tauri Regular'), local('Tauri-Regular'), url('/fonts/Tauri.woff') format('woff')


global-reset()
html5-reset()


//
//  VARIABLES
//

$blue = #296089
$blueL = lighten($blue, 10%)
$blueD = darken($blue, 10%)

$red = #C0392B
$redL = lighten($red, 10%)
$redD = darken($red, 10%)

$gold = darken(gold, 5%)
$goldL = gold
$goldD = darken(gold, 10%)


$gray = #333
$grayL = #444
$grayXL = #888
$marble = #EEE

html
body
#container
    height: 100%
    font-family: 'Tauri'
    // background: $gray
    color: $gray

a
    text-decoration: none
    color: inherit

p
    padding: 0 40px

h2
    height: 60px
    line-height: 60px
    margin-bottom: 10px
    font-size: 150%
    color: white
    background: $gray
    padding: 0 40px

    // border-bottom: 4px solid $red


button
    height: 60px
    padding: 0 20px
    margin-right: 10px
    line-height: 60px
    border: none
    font-size: inherit
    font-family: inherit
    border-radius: 4px
    cursor: pointer
    color: white
    background: $gray
    &:hover
        background: $grayL

    &.primary
        background: $red
    &.primary:hover
        background: $redL
//
//  NAV
//

#nav
    width: 240px
    position: fixed
    padding: 40px 40px
    left: 0
    top: 0
    height: 100%
    overflow-y: scroll
    // background: $gray

    h1 > a
        display: block
        height: 60px
        text-align: center
        line-height: 60px
        font-size: 150%
        background: $red
        color: white

        i
            font-size: 75%
            margin: 0 -1px

#cities
    padding-bottom: 40px
    a
        overflow: hidden
        display: block
        margin: 10px 0
        padding: 10px
        background: $marble

        &:hover
            background: $red
            .city-info
                color: white
                small
                    color: $marble

        .city-info
            width: 100px
            height: 40px
            padding: 20px 20px
            display: block
            float: left
            font-size: 120%
            color: $red
            small
                font-size: 75%
                color: $gray
        .city-map
            width: 80px
            height: 80px
            display: block
            float: left

            canvas
                width: 80px
                height: 80px
                background: white
#main
    margin-left: 260px
    padding: 40px 60px

    & > * > section

        background: $marble
        padding: 40px

#city
    h2
        overflow: hidden

    .city-header-info
        display: inline
        float: left

    .city-header-population
        color: $grayXL


    .city-header-buttons
        display: inline
        float: right

        #remove-city
            display: block
            width: 40px
            height: 40px
            margin: 10px
            text-align: center
            line-height: 40px
            cursor: pointer
            &:hover
                background: $grayL


#create-form

    padding: 40px
    font-size: 200%
    background: $marble


    & > div
        min-height: 60px
        line-height: 60px
        // padding: 10px 0

    .form-label
        width: 200px
        text-align: right
        display: inline
        float: left
        padding-right: 20px

        color: $red

    .form-label-empty
        width: 210px
        display: inline-block

    .form-input
        display: inline-block




    input
        display: inline-block
        min-height: 60px
        line-height: 60px
        font-size: inherit
        text-transform: uppercase
        border: none
        color: inherit
        background: inherit
        font-family: inherit
        &:focus
            outline: none

    #map-preview
        width: 400px
        height: 400px
        border-radius: 4px
        // background: $gold
        // border: 4px solid $gray
        // background: $gold