@import 'nib/reset'
@import 'font-awesome.css'
@import 'arrow'

@font-face
  font-family: 'Tauri'
  font-style: normal
  font-weight: 400
  src: local('Tauri Regular'), local('Tauri-Regular'), url('/fonts/Tauri.woff') format('woff')


global-reset()
html5-reset()


//
//  VARIABLES
//

$blue = #296089
$blueL = lighten($blue, 10%)
$blueD = darken($blue, 10%)

$red = #C0392B
$redL = lighten($red, 10%)
$redD = darken($red, 10%)

$gold = darken(gold, 5%)
$goldL = gold
$goldD = darken(gold, 10%)


$gray = #333
$grayL = #444
$grayXL = #888
$cloud = #AAA
$marble = #EEE

//
//  ELEMENTAL
//

html
body
#container
    height: 100%
    font-family: 'Tauri'
    color: $gray

    text-transform: uppercase
    -webkit-mask-image: url(/images/grunge.png)
    -moz-mask-image: url(/images/grunge.png)
    mask-image: url(/images/grunge.png)

a
    text-decoration: none
    color: inherit

p
    padding: 0 40px

h2
    height: 60px
    line-height: 60px
    margin-bottom: 10px
    font-size: 150%
    color: white
    background: $gray
    padding: 0 40px


button
    height: 60px
    padding: 0 20px
    margin-right: 10px
    line-height: 60px
    border: none
    font-size: inherit
    font-family: inherit
    border-radius: 4px
    cursor: pointer
    color: white
    background: $gray
    &:hover
        background: $grayL

    &.primary
        background: $red
    &.primary:hover
        background: $redL
//
//  NAV
//

$navHeight = 50px
// $navContainerBackground = $marble
$navContainerBackground = $gray
// $navBackground = $marble
$navBackground = $gray
$navItemBackground = white
$navItemHoverBackground = $goldD

#nav-container


    position: fixed
    width: 100%
    height: $navHeight
    padding: 20px 0
    background: $navContainerBackground

#nav


    margin: 0 20px
    overflow: hidden
    background: $navBackground

 
    & > a
        display: block
        float: left
        padding: 0 15px 0 30px
        height: $navHeight
        background: $navItemBackground
        // color: white
        text-align: center
        line-height: $navHeight
        font-size: 150%
        cursor: pointer

        &:hover
            background: $navItemHoverBackground
            arrowHeadColor($navItemHoverBackground)

        arrowHead($navHeight, $navItemBackground)
        arrowButt($navHeight, $navContainerBackground, 12px)
        arrowFirstButt(20px)
        arrowLastHead()

    a.no-arrow
        noArrowHead()

    a#header
        arrowHeadColor($red)
        color: white
        padding: 0
        background: $red
        h1
            padding: 0 20px
        i
            font-size: 75%
            margin: 0 -1px

    a:last-of-type
        display: none

// a#header.no-arrow
//    noArrowHead()


//
//  MAIN
//


#cities
    padding-bottom: 40px
    a
        overflow: hidden
        display: block
        margin: 10px 0
        padding: 10px
        background: $marble

        &:hover
            background: $red
            .city-info
                color: white
                small
                    color: $marble

        .city-info
            width: 100px
            height: 40px
            padding: 20px 20px
            display: block
            float: left
            font-size: 120%
            color: $red
            small
                font-size: 75%
                color: $gray
        .city-map
            width: 80px
            height: 80px
            display: block
            float: left

            canvas
                width: 80px
                height: 80px
                background: white
