@import 'nib/reset'
@import 'font-awesome.css'
@import 'arrow'
@import 'color'

@import 'structure'

@font-face
  font-family: 'Tauri'
  font-style: normal
  font-weight: 400
  src: local('Tauri Regular'), local('Tauri-Regular'), url('/fonts/Tauri.woff') format('woff')

$color = $pomegranate

global-reset()
html5-reset()

//
//  ELEMENTAL
//

mask()
    -webkit-mask-image: url(/images/grunge.png)
    -moz-mask-image: url(/images/grunge.png)
    mask-image: url(/images/grunge.png)
    

html
body
    height: 100%
    font-family: 'Tauri'
    text-transform: uppercase
    height: 100%
    background: $clouds
    color: $concrete

    text-shadow 2px 2px 1px white !important
a
    text-decoration: none
    color: inherit


nav
    list-style: none

input
    border: none
    background: inherit
    font-family: 'Tauri'
  &:focus
    outline: none
    outline-color: transparent

button
    font-family: 'Tauri'

    border: none
    color: $concrete
    background: inherit
    font-size: inherit
    padding: 10px
    margin-right: 10px
    text-transform: uppercase
    cursor: pointer
    &:hover
      color: $color
